generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("zehn-db")
}

// Sizning turlaringiz asosida modellar
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   // SUPER_ADMIN, ADMIN, TEACHER, STUDENT
  firstName String
  lastName  String?
  createdAt DateTime @default(now())
}

model Center {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
}
